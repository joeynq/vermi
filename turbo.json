{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"experimentalUI": true,
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"watch": {
			"cache": false,
			"persistent": true
		},
		"link": {
			"cache": false
		}
	}
}
