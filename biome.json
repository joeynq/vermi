{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["**/node_modules/**", "**/dist/**", "**/build/**"],
		"include": ["**/*.ts", "**/*.tsx", "**/*.json"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noShadowRestrictedNames": "off"
			},
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"useImportType": "off",
				"noParameterAssign": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
